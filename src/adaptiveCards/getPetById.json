{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "id: ${id}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "status: ${status}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "array index expression: ${photoUrls[0]}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "unsupported expression should keep unchanged: ${add('hello','world')}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "none exist variable should keep unchanged ${noneexistedproperty}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "name with if condition support: ${if(name, name, 'N/A' )}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "category.id with space around: ${  category.  id  }",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "category.name which is not correct expression: $ {category.name}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "plain string test: ${'plain string contain spaces'}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "photoUrls jsonStringify test: ${jsonStringify(photoUrls)}"
    },
    {
      "type": "Container",
      "$data": "${photoUrls}",
      "items": [
        {
          "type": "TextBlock",
          "text": "string array container test: ${$data}",
          "wrap": true
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "test container without data 1",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "test container without data 2",
          "wrap": true
        }
      ]
    },
    {
      "type": "Container",
      "$data": "${tags}",
      "items": [
        {
          "type": "TextBlock",
          "text": "access root from container: ${id} ${$root.status}",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "tags.name: ${name}",
          "wrap": true
        }
      ]
    },

    {
      "type": "Image",
      "url": "https://placehold.co/600x400",
      "$when": "${noneexistedproperty != null && noneexistedproperty != ''}"
    },
    {
      "type": "Image",
      "url": "https://placehold.co/600x400",
      "$when": "${id != null && id != ''}"
    }
  ]
}
